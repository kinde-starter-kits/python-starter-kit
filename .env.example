# Kinde Application Configuration
# Get these values from your Kinde application settings
KINDE_CLIENT_ID=<YOUR_CLIENT_ID>
KINDE_CLIENT_SECRET=<YOUR_CLIENT_SECRET>

# Redirect URI configurations
# Update these URLs to match your application's deployment
KINDE_REDIRECT_URI=http://localhost:5000/callback
LOGOUT_REDIRECT_URL=http://localhost:5000/
KINDE_CALLBACK_URL=http://localhost:5000/callback

# Kinde Host Configuration
# Replace <YOUR_SUBDOMAIN> with your actual Kinde subdomain
KINDE_HOST=https://<YOUR_SUBDOMAIN>.kinde.com
KINDE_ISSUER_URL=https://<YOUR_SUBDOMAIN>.kinde.com
KINDE_DOMAIN=<YOUR_SUBDOMAIN>.kinde.com

# OAuth Configuration
KINDE_AUDIENCE=
GRANT_TYPE=AUTHORIZATION_CODE_WITH_PKCE
# Generate a random string for code verifier (43-128 characters)
CODE_VERIFIER=<YOUR_CODE_VERIFIER>

# Flask Application Configuration
TEMPLATES_AUTO_RELOAD=True
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
# Generate a secure random secret key for Flask sessions
SECRET_KEY=<YOUR_SECRET_KEY>

# Management API Configuration (Optional)
# Only needed if you're using Kinde Management API
MGMT_API_CLIENT_ID=<YOUR_MGMT_API_CLIENT_ID>
MGMT_API_CLIENT_SECRET=<YOUR_MGMT_API_CLIENT_SECRET>
KINDE_MANAGEMENT_CLIENT_ID=<YOUR_MANAGEMENT_CLIENT_ID>
KINDE_MANAGEMENT_CLIENT_SECRET=<YOUR_MANAGEMENT_CLIENT_SECRET>
